<resources xmlns:android="http://schemas.android.com/tools">

    <!--             -->
    <!-- LIGHT THEME -->
    <!--             -->

    <style name="AppTheme.Light.Default" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/light_colorPrimary</item>
        <item name="colorPrimaryDark">@color/light_colorPrimaryDark</item>
        <item name="colorAccent">@color/light_colorAccent</item>

        <item name="colorBackground">@color/light_colorBackground</item>
        <item name="colorContentBackground">@color/light_colorContentBackground</item>
    </style>

    <style name="AppTheme.Light.Default.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Light" parent="AppTheme.Light.Default" />
    <style name="AppTheme.Light.NoActionBar" parent="AppTheme.Light.Default.NoActionBar" />

    <!--            -->
    <!-- DARK THEME -->
    <!--            -->

    <style name="AppTheme.Dark.Default" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/dark_colorPrimary</item>
        <item name="colorPrimaryDark">@color/dark_colorPrimaryDark</item>
        <item name="colorAccent">@color/dark_colorAccent</item>

        <item name="colorBackground">@color/dark_colorBackground</item>
        <item name="colorContentBackground">@color/dark_colorContentBackground</item>
    </style>

    <style name="AppTheme.Dark.Default.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme.Dark.Default" />
    <style name="AppTheme.Dark.NoActionBar" parent="AppTheme.Dark.Default.NoActionBar" />

</resources>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_story"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/cardview_content_padding"
        android:paddingRight="@dimen/cardview_content_padding"
        android:paddingTop="@dimen/cardview_content_padding"
        android:paddingBottom="@dimen/cardview_story_content_padding">

        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/name_topic"
                android:layout_alignTop="@+id/name_topic"
                android:contentDescription="Topic"
                android:src="@drawable/ic_smile_black_24dp" />

            <TextView
                android:id="@+id/name_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/image_topic"
                android:text="Funny" />

            <TextView
                android:id="@+id/number_story"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="#56"
                android:textSize="12sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/text_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#30000000" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/time_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/numbers_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/image_like"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_toStartOf="@id/numbers_likes"
                android:layout_marginEnd="4dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_not_liked" />

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
